<!-- Description: This partial displays a link that when clicked generates a
      hidden search field and button to generate a profile search. -->
<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
</head>

<div id="mainPage">
  <br>
  <br>
  <br>
  <div class="searchItems">
    <h3>Search Makeup Artists In Your Area</h3>
  </div>
  <br>
  <%= search_form_for @search do |f| %>
    <div class="searchItems">
      <%= f.text_field :location_cont, class: "form-control", placeholder: "Search by County", autofocus: true, autocomplete: true, size: 20 %>
    </div>
    <br>
    <br>
    <div class="searchItems">
      <%= f.submit 'Search', class: "button btn btn-default btn-lg" %>
    </div>
<% end %>

    <div >
      <% @profiles.each do |profile| %>
          <table >
            <tbody>
              <tr>
                <td><%= link_to profile.full_name, profile%></td>
              </tr>
            </tbody>
          </table>
      <% end %>
    </div>
</div>

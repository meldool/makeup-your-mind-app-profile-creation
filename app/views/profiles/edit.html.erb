<div id="edit_form_panel">
  <% header "Edit Profile" %>

  <div>
    <%= form_for @profile, onsubmit: "return validateForm()" do |f| %>
      <br>
      <div class="form-group", class: "form-text">
        <%= f.label :full_name %><br>
        <%= f.text_field :full_name, class:"form-control"%>
      </div>
      <br>
      <div class="form-group">
        <%= f.label :contact_number, class: "form-text" %><br>
        <%= f.text_field :contact_number, class:"form-control" %>
      </div>
      <br>
      <div class="form-group">
        <%= f.label :location, class: "form-text" %><br>
        <%= f.text_field :location, class:"form-control" %>
      </div>

      <br>
      <div class="form-group">
        <%= f.label :makeup_type, class: "form-text" %><br>
        <%= f.text_field :makeup_type, class:"form-control" %>
      </div>
      <br>
      <div class="form-group">
        <%= f.label :bio, class: "form-text" %><br>
        <%= f.text_field :bio, class:"form-control" %>
      </div>
      <br>
      <br>
      <div id="button">
        <div class="form-group">
          <%= f.submit "Update Account"%>
          <br>
        </div>
      </div>
    <% end %>
  </div>
</div>

